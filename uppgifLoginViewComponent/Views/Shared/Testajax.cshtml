                        </button>
                    </h2>
                    <div id="item@(item.ID.ToString())" class="accordion-collapse collapse " aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            
                            <p>CourseName: @item.Name</p>
                            <p>Grade: @item.StudentGrade</p>
                        </div>
                    </div>
                </div>
           }
    }
