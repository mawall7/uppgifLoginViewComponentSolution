@using Microsoft.AspNetCore.Identity
@using uppgifLoginViewComponent.Areas.Identity.Data

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/site.css" />


@if (SignInManager.IsSignedIn(User))
{
    <div class="navbar navbar-expand-lg navbar-ligth text-white">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a id="manage" class="nav-link active" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link">Logout</button>
                </form>
            </li>
        </ul>
    </div>
            }
            else
            {
            <div class="navbar navbar-expand-lg navbar-ligth text-white">
                <ul  class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </li>
                </ul>
            </div>


                    }
